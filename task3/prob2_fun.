#include <stdio.h>
#include <stdlib.h>
#include<math.h>
double area(double rad);
double diameter(double rad);
double circumference(double);

int main()
{
    int rad;
    scanf("%d",&rad);
    printf("Diameter = %f\n",diameter(rad));
    printf("Circumference = %f\n",circumference(rad));
    printf("Area = %f\n ",area(rad));
    return 0;
}
double area(double rad){
  return(M_PI*rad*rad);
}
double diameter(double rad){
 return(2*rad);
}
double circumference(double rad){
 return(2*M_PI*rad);
}
